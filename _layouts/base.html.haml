---
#do_not_track_dependencies: true
---
!!!5
%html
  %head
    %meta{ :charset=>'utf-8' }
    %title #{site.title}
    %meta{ :name=>'viewport', :content=>'width=device-width, initial-scale=1.0' }
    %link{ :rel=>'stylesheet', :href=>'/stylesheets/bootstrap.css' }
    %link{ :rel=>'stylesheet', :href=>'/stylesheets/bootstrap-responsive.css' }
    %link{ :rel=>'stylesheet', :href=>'/stylesheets/docs.css' }
    %link{ :rel=>'stylesheet', :href=>'/stylesheets/prettify.css' }
    %link{ :rel=>'stylesheet', :href=>'/stylesheets/kuuyee.css' }
    /[if lt IE 9]
      %script{ :type=>'text/javascript', :src=>'/javascripts/html5shiv.js' }

  %body{:'data-spy'=>'scroll', :'data-target'=>'.bs-docs-sidebar'}
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          .github-banner.hidden-phone
            %a{ :href=>'https://github.com/kuuyee/kuuyee.org' }
              %img{ :style=>'position:absolute;top:0;right:0;border:0;', :src=>'/images/forkme_right_white_ffffff.png', :alt=>'Fork me on GitHub'}
          %a{:class=>'btn btn-navbar', 'data-toggle'=>'collapse', 'data-target'=>'.nav-collapse'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{ :href=>'/index.html' } 
            %img{ :src=>'/images/kuuyee_logo.png', :alt=>'#{site.title}', :class=>"kuuyee-logo" }
            #{site.title}
          .nav-collapse
            %ul.nav
              %li
                %a{ :href=>'/index.html' } Home
              %li
                %a{ :href=>'/docs/index.html'} 文档
              %li
                %a{ :href=>'/about.html'} 关于 
            %form{ :class=>'navbar-form pull-right'}
              %input{ :class=>'span2', :type=>'text', :placeholder=>'Email'}
              %button{ :type=>'submit', :class=>'btn'} Sign in

    .container
      .row{:style=>'height:30px'}
      ~ content
    %footer{:class=>'footer'}
      .container
        %p{:style=> "text-align: center;"} &copy;#{Date.today.year} 光子CI之旅

    %script{ :type=>'text/javascript', :src=>'/javascripts/jquery.js' }

    :javascript
      $(document).ready(function() {
        $("pre.prettyprint code").removeClass("prettyprint").removeClass("linenums");
        prettyPrint();
      });
    :javascript
      $(document).ready(function() {
        var pathname = window.location.pathname;
        console.log(pathname);
        $("body > .navbar a[href='" + pathname + "']").closest("li").addClass("active");
        $("body > #content ul.nav a[href='" + pathname + "#content']").closest("li").addClass("active");
      });


    %script{ :type=>'text/javascript', :src=>'/javascripts/bootstrap-transition.js' }
    %script{ :type=>'text/javascript', :src=>'/javascripts/bootstrap-alert.js' }
    %script{ :type=>'text/javascript', :src=>'/javascripts/bootstrap-modal.js' }
    %script{ :type=>'text/javascript', :src=>'/javascripts/bootstrap-dropdown.js' }
    %script{ :type=>'text/javascript', :src=>'/javascripts/bootstrap-scrollspy.js' }
    %script{ :type=>'text/javascript', :src=>'/javascripts/bootstrap-tab.js' }
    %script{ :type=>'text/javascript', :src=>'/javascripts/bootstrap-tooltip.js' }
    %script{ :type=>'text/javascript', :src=>'/javascripts/bootstrap-popover.js' }
    %script{ :type=>'text/javascript', :src=>'/javascripts/bootstrap-button.js' }
    %script{ :type=>'text/javascript', :src=>'/javascripts/bootstrap-collapse.js' }
    %script{ :type=>'text/javascript', :src=>'/javascripts/bootstrap-typeahead.js' }
    %script{ :type=>'text/javascript', :src=>'/javascripts/bootstrap-affix.js' }
    %script{ :type=>'text/javascript', :src=>'/javascripts/holder.js' }
    %script{ :type=>'text/javascript', :src=>'/javascripts/prettify.js' }
    %script{ :type=>'text/javascript', :src=>'/javascripts/application.js' }
