#do_not_track_dependencies: true
---
!!!5
%html
  %head
    %meta{ :charset=>'utf-8' }
    %title 光子开源之旅
    %meta{ :name=>'viewport', :content=>'width=device-width, initial-scale=1.0' }
    :css
      body {
        padding-top: 60px;background: url("/images/white_texture.png") repeat scroll 0 0 transparent;
      }
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>"/stylesheets/styles.css" }
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>"/stylesheets/kuuyee.css" }
    /[if lt IE 9]
      %script{ :type=>'text/javascript', :src=>'//html5shim.googlecode.com/svn/trunk/html5.js' }
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{ :href=>"#{site.base_url}/" } 光子开源之旅
          %ul.nav
            %li
              %a{ :href=>"#{site.base_url}/" } Home
            %li
              %a{ :href=>"#{site.base_url}/hibernate/" } 博客
            %li
              %a{ :href=>"#{site.base_url}/ui/" } 关于我

    .container
      ~ content
      %hr
      %footer
        %p &copy; 光子开源之旅 2012-#{Date.today.year}
